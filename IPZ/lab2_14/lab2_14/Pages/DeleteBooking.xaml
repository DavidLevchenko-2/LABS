<Window
    Background="#ECECEC"
    Height="450"
    Title="DeleteBooking"
    Width="300"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab2_14.Pages.DeleteBooking"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab2_14.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Кількість балів:" Margin="10" Grid.Row="0" HorizontalAlignment="Left" />
        <TextBox Margin="10" Grid.Row="1" Text="{Binding amount, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Click="DeleteBookingClick"
            Content="Видалити"
            Height="40"
            HorizontalAlignment="Center"
            Width="191"
            Grid.Row="2" 
            Margin="10" />
    </Grid>
</Window>