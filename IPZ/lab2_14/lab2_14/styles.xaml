<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Стиль для кнопок -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="#FF6F61" /> <!-- Яскраво-кораловий -->
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для рамок -->
    <Style TargetType="Border">
        <Setter Property="Background" Value="#F0F4F8" /> <!-- Світло-блакитний -->
        <Setter Property="CornerRadius" Value="5" />
    </Style>

    <!-- Стиль для заголовків/міток -->
    <Style TargetType="TextBlock" x:Key="LabelStyle">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#2C3E50" /> <!-- Темно-синій -->
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Стиль для відображення значень -->
    <Style TargetType="TextBlock" x:Key="ValueStyle">
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="Background" Value="#E3F2FD" /> <!-- Світло-блакитний фон -->
        <Setter Property="Foreground" Value="#1976D2" /> <!-- Темно-блакитний -->
        <Setter Property="FontSize" Value="13" />
    </Style>

</ResourceDictionary>